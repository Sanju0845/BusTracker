{
  "expo": {
    "name": "BusTrack",
    "slug": "BusTrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/kmce-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/kmce-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bustrack",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show your position on the map.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location to show your position on the map.",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/kmce-logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.bustrack",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/kmce-logo.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow BusTrack to use your location to show your position on the map."
        }
      ]
    ]
  }
}
